extends ../layout/common

block content
  if errors
      each error in errors
        .alert.alert-danger= error
  h1.ui.center.aligned.header List user in system
  h4.ui.center.aligned.header 
      form(action="/user/search", method="GET")
          span Search user by name
          span &nbsp &nbsp
          input(type="text",name="q")
          span &nbsp &nbsp &nbsp
          button Search
  .ui.container
        table.ui.celled.table.center.aligned
          thead
            tr
              th User ID
              th Name
              th Telephone
              th  
          tbody
            each user in users
              tr
                td= user.id
                td= user.name
                td= user.tel
                td 
                  a(href="/user/detail/"+ user.id) View Detail

          tfoot
            tr
              th(colspan='4')


  a(href="/user/") Back

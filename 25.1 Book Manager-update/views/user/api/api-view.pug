extends ../../layout/common

block content
    h1.ui.center.aligned.header View Detail User
    .ui.container
        table.ui.celled.table.center.aligned
          thead
            tr
              th Avatar
              th User ID
              th Name 
              th Telephone
              th  Email
          tbody
          if users != undefined
            each user in users
              tr
                td 
                  img(src=user["avatar"] ,style="background: #dddddd; border-radius: 50%; border: 1px solid #a1a1a1; height: 64px; margin: 2px; padding: 1px; text-align: center; width: 64px;")
                td #{user["_id"]}
                td= user["name"]
                td= user["tel"]
                td= user["email"]


        a(href="/api/users/list/") Back
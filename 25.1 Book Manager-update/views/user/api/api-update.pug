extends ../../layout/common 

block content
    h1 UPDATE USER BY ID
    if errors
        each error in errors
            .alert.alert-danger= error
    
    form(action="/api/users/edit/"+users['id'],method="POST",enctype="multipart/form-data")
        .form-group
            label(for='name') User Name :
            input#name.form-control(type="text", name="name",value= users[0]['name'])
        .form-group
            label(for='tel') Telephone number : 
            input#tel.form-control(type="text", name="tel",value= users[0]['tel'])
        .form-group
            label(for='email') Email : 
            input#email.form-control(type="text", name="email",value=users[0]['email'])
        .form-group
            label(for='avatar') Avatar : 
            input#avatar.form-control-file(type="file", name="avatar")
        .d-flex.align-items-center
            button.btn.btn-primary UPDATE
            a.btn.btn-danger.ml-auto(href='/user/', role='button') Back
      table.ui.celled img { display: inline-block; }
      footer { margin: 35px 0 15px 0; text-align: center }
body 
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    a.navbar-brand(href='/') HOME
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.mr-auto
        li.nav-item.dropdown
          a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
            | Book Manager
          .dropdown-menu(aria-labelledby='navbarDropdownMenuLink')
              a.dropdown-item(href='/book/list') View all
              a.dropdown-item(href='/book/create') Add New Book 
              a.dropdown-item(href='/book/edit') Edit  book
              a.dropdown-item(href='/book/delete') Delete  book 
        li.nav-item.dropdown
          a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
            | User Manager
          .dropdown-menu(aria-labelledby='navbarDropdownMenuLink')
              a.dropdown-item(href='/user/list') View all
              a.dropdown-item(href='/user/create') Add New User 
              a.dropdown-item(href='/user/edit') Edit  User
              a.dropdown-item(href='/user/delete') Delete  User
        li.nav-item.dropdown
          a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href='#', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
            | Transaction Manager
          .dropdown-menu(aria-labelledby='navbarDropdownMenuLink')
              a.dropdown-item(href='/transaction/list') View all
              a.dropdown-item(href='/transaction/create') Create Transaction          
        li.nav-item
            a.nav-link(href='/cart/items')= "CART" + "( "+ count + ")" 
      

    if user
      p= 'Hello   ' + user.name
  br
  br
  .container.pt-5
    block content

extends ../layout/common

block content
    h1 LOGIN
    if errors
        each error in errors
            .alert.alert-danger= error
    
    form(method="POST")
        .form-group
            label(for='email') Email :
            input#email.form-control(type="text", name="email",value= values ? values.email : '')
        .form-group
            label(for='pass') Password : 
            input#pass.form-control(type="password", name="pass",value= values ? values.pass : '')
        .d-flex.align-items-center
            button.btn.btn-primary LOGIN
extends ../layout/common

block content
    h1 ADD NEW USER
    if errors
        each error in errors
            .alert.alert-danger= error
    
    form(action="/user/create",method="POST")
        .form-group
            label(for='name') User Name :
            input#name.form-control(type="text", name="name",value= values ? values.name : '')
        .form-group
            label(for='exampleFormControlTextarea1') Example textarea
            textarea#exampleFormControlTextarea1.form-control(rows='3')


        .form-group
            label(for='tel') Telephone number : 
            input#tel.form-control(type="text", name="tel",value= values ? values.tel : '')
        .d-flex.align-items-center
            button.btn.btn-primary ADD
            a.btn.btn-danger.ml-auto(href='/user/', role='button') Back